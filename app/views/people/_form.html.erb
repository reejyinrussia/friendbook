<% if person.errors.any? %>
  <div id="notice" class="error">
    <%= person.errors.full_messages.join("\n") %>
  </div>
<% end %>
<%= form_with(model: person, local: true, class: "ui form") do |form| %>
  <% if person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name, id: :person_first_name, required: true %>
    <%= form.text_field :first_name, id: :person_first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name, id: :person_last_name, required: true %>
    <%= form.text_field :last_name, id: :person_last_name %>
  </div>

  <div class="field">
    <%= form.label :avatar, id: :person_avatar, required: true %>
    <%= form.text_field :avatar, id: :person_avatar %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :person_email %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :person_phone %>
  </div>

  <div class="actions">
    <%= form.submit nil, class: "ui button primary" %>
  </div>
<% end %>
